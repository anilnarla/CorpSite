pipeline {
    agent any
    tools { 
        maven 'Jenkins Maven' 
    }

    parameters {
        string(name: 'artifactVersion')
    }

    stages {
        stage('Setup') {
            environment {
              JENKINS = credentials('jenkins_user')
            }
            steps {
                sh "echo Retrieving release artifact for version ${params.majorVersion}.${params.minorVersion}"
                sh 'rm -rf globex-war'
                script {
                    def server = Artifactory.server 'artifactory2'
                    def downloadSpec = """{
                    "files": [
                    {
                        "pattern": "corpsite/*.war"
                    }]}"""
                    server.download spec: downloadSpec
                }                
                snDevOpsPackage(name: "package", artifactsPayload: """{"artifacts": [{"name": "globex-web.war", "repositoryName": "corpsite", "pipelineName": "${env.JOB_BASE_NAME}", "version": "${majorVersion}.${minorVersion}"}]}""")
            }
        }
        stage('Prod') {
            environment {
              TOMCAT = credentials('tomcat_user')
            }
            
            steps {
                sh "echo Deploying GlobEx version: ${params.majorVersion}.${params.minorVersion}"
                snDevOpsChange()
                sh 'curl -u $TOMCAT_USR:$TOMCAT_PSW --location --request PUT \'http://tomcat:8080/manager/text/deploy?path=/globex&war=globex-web.war&update=true\' --header \'Content-Type: application/java-archive\' --data-binary \'@globex-war/globex-web.war\''
            }
        }
    }
}
